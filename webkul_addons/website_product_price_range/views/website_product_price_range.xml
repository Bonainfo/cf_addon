<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
       <record id="wk_website_product_price_range_form_view" model="ir.ui.view">
        <field name="name">website.product.price.range.form</field>
        <field name="model">website.product.price.range</field>
        <field name="arch" type="xml">
            <form string="Price Range">
                <sheet>
                    <group>
                          <group>
                             <field name='filter_type'/>                       
                          </group>
                          <group>
                              <field name='active'/>
                               <field name= "default"/>
                          </group>
                          
                    </group>
                    <div>
                            <b><p>  Price Form  <field name= "start" class='oe_inline'/> 
                                Upto<field name= "end" class='oe_inline' />  
                             with Interval of   <field name= "interval"  class='oe_inline'/> 
                             <button attrs="{'invisible':[('filter_type','!=','selection')]}"  string="Generate" type="object" name="generated_range" class="oe_highlight oe_inline"/> 
                           </p></b>                            
                    </div>
                     <group col="2" string="Range Rules" attrs="{'invisible':[('filter_type','!=','selection')]}"  >
                       <div><field name='range_list' options="{'no_create':True}"/></div>
                    </group>
                     <div class="text-muted">
                            <h3>NOTES</h3>                             
                             <p><strong> Start Price Limit</strong>:Minimum  Range of Price Filtration Amount. </p>
                              <p><strong> End Price Limit</strong>: Maximum Range of Price Filtration Amount. </p>
                             <p><strong> Interval</strong>:Define the Step between the Price Range .</p>
                      </div>
                </sheet>
            </form>
        </field>
    </record>
     <record id="wk_price_range_form_view" model="ir.ui.view">
        <field name="name">wk.price.range.form</field>
        <field name="model">wk.price.range</field>
        <field name="arch" type="xml">
            <form string="Price Range">
                <sheet>
                  <group>
                    <group>
                        <field name= "start" class='oe_inline'/>
                    </group>
                    <group>
                        <field name= "end" class='oe_inline' />
                    </group>
                  </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id= "wk_website_product_price_range_tree_view" model= "ir.ui.view">
        <field name= "name">website.product.price.range.tree</field>
        <field name= "model">website.product.price.range</field>      
        <field name= "arch" type= "xml">
            <tree string="Product  Price Range" > 
               <field name='name'/>
               <field name= "default"/>   
                <field name= "start"/>   
                <field name= "end" />                
            </tree>
        </field>
    </record>

    <record id= "wk_price_range_tree_view" model= "ir.ui.view">
        <field name= "name">wk.price.range.tree</field>
        <field name= "model">wk.price.range</field>      
        <field name= "arch" type= "xml">
            <tree string="Range" > 
               <field name='name'/>
                <field name= "start"/>   
                <field name= "end" />                
            </tree>
        </field>
    </record>
    <record id= "wk_website_product_price_range_action" model= "ir.actions.act_window">
        <field name= "name">Product  Price Range Configuration</field>
        <field name= "type">ir.actions.act_window</field>
        <field name= "res_model">website.product.price.range</field>
        <field name= "view_type">form</field>
        <field name= "view_mode">tree,form</field>
        <field name= "view_id" eval= "False"/>
        <field name= "help" type= "html">
          <p class= "oe_view_nocontent_create">
            Click to define a new Product Range.
          </p><p>
            Product Range can used to browse your products through the
            touchscreen interface.         
          </p>
        </field>
    </record>
        <record id= "wk_price_range_action" model= "ir.actions.act_window">
        <field name= "name">Price Range Listing</field>
        <field name= "type">ir.actions.act_window</field>
        <field name= "res_model">wk.price.range</field>
        <field name= "view_type">form</field>
        <field name= "view_mode">tree,form</field>
        <field name= "view_id" eval= "False"/>
        <field name= "help" type= "html">
          <p class= "oe_view_nocontent_create">
            Click to define a new Range.
          </p><p>
            Range can used to associate with your product range .         
          </p>
        </field>
    </record>

    <menuitem id="menu_product_price_range_root_menu"  parent="sales_team.menu_sale_config" sequence="50"  name="Price Range " string="Price Range"  />
   <menuitem id="menu_product_price_range_config"  parent="menu_product_price_range_root_menu" sequence="2"  name="Product Range" string="Range" 
    action="wk_website_product_price_range_action"/>
    <menuitem id="menu_wk_price_range_menu"  parent="menu_product_price_range_root_menu" sequence="3"  name="Range" string="Range" 
    action="wk_price_range_action"/>
    </data>
</odoo>