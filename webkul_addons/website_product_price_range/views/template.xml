<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <template id="website_product_price_range.assets_frontend" inherit_id="website.assets_frontend" name="website product price range assert front template">
      <xpath expr="." position="inside">
              <link href="/website_product_price_range/static/src/css/website_product_price_range.css" rel="stylesheet"/>

      </xpath>
    </template>
    <template active="True"
      customize_show="True" id="website_product_price_range.products" inherit_id="website_sale.products" name="Product Price Range">
      <xpath expr="//div[@id='products_grid_before']" position="inside">
        <t t-if='current_price_range and price_range_limits'>
         <link
          href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css"
          rel="stylesheet"/>
        <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"
          type="text/javascript"/>
            <script src="/website_product_price_range/static/src/js/website_product_price_range.js" type="text/javascript"/>
        <div class="col-md-12 hidden-xs">
          <form action="/price/range" class="js_product_price_range form-horizontal" method="POST" role="form">
            <b>
              <span>Price Filter</span>
              <span>
                <a class="fa fa-times" href="/clear/range" t-if="clear_range" title="Clear Price Range"/>
              </span>
            </b>
            <br/>
            <br/>
            <div class="price_range_loader" style="display:none;">
       </div>
            <div id="wk_slider"/>
            <br/>
            <p class="col-md-4 col-xs-4 col-sm-4 text-left" style="padding-left:0px">
              <label for="min_price">From</label>
              <input class="form-control" id="min_price" name="min_price" t-att-data-default_min_price_range="current_price_range[0]" t-att-data-min_price_range="price_range_limits[0]" t-att-value="current_price_range[0]" type="text"/>
            </p>
            <p class="col-md-4 col-xs-4  col-sm-4 text-right" style="padding-left:0px">
              <label for="max_price">To</label>
              <input class="form-control" id="max_price" name="max_price" t-att-data-default_max_price_range="current_price_range[1]" t-att-data-max_price_range="price_range_limits[1]" t-att-value="current_price_range[1]" type="text"/>
            </p>
            <p class="col-md-4 col-xs-4 col-sm-4 text-center" style="padding-left:0px">
              <label for="wk_t">
                <a class="btn btn-primary a-submit" id="price_link_filter">GO</a>
              </label>
              <input class="form-control" id="wk_t" type="hidden"/>
            </p>
          </form>
        </div>
      </t>
      </xpath>
    </template>
  </data>
</odoo>
