<odoo>
    <record id="pp_city_in_partner_form_view" model="ir.ui.view">
        <field name="name">pp.city.in.partner.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="state_id" position="attributes">
                <attribute name="placeholder">Governorate</attribute>
            </field>
            <field name="city" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="city" position="after">
                <field name="pp_city_id" placeholder="City" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" style="width:38%" options="{'no_open': True}"/>
            </field>
            <xpath expr="//notebook//form/sheet//field[@name='city']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//form/sheet//field[@name='city']" position="after">
                <field name="pp_city_id" placeholder="City" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact')]}" style="width:38%" options="{'no_open': True}"/>
            </xpath>
        </field>
    </record>

