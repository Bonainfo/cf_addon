<odoo>
	<data>

		<template id="website_saas_plan_theme_pp_layout" inherit_id="pp_saas_portal_demo.saas_theme_pharmacistplace_layout">
			<xpath expr="//a[2]" position="attributes">
				<attribute name="href">/saas-plan</attribute>
			</xpath>
		</template>

		<template id="website_saas_plan_theme_pp_portal_layout" inherit_id="pp_saas_portal_demo.saas_theme_pharmacistplace_portal_layout">
			<xpath expr="//a[2]" position="attributes">
				<attribute name="href">/saas-plan</attribute>
			</xpath>
		</template>


		<template id="pp_saas_plan" name="SAAS Plans">
			<t t-call="website.layout">
				<div class="oe_structure"/>
				<div id="wrap">
					<div class="container">
						<h1 class="mb32 hidden-md hidden-lg hidden-xl">Select Plan</h1>
						<div style="display:flex;" class="mb64 mt32 hidden-sm hidden-xs">
							<div style="width: 40%;">
								<t t-call="theme_pharmacistplace.three_hr_lines_left_part"/>
							</div>
							<div style="width: 20%;text-align: center;padding: 10px;">
								<span style="font-size: 36px;color: #272866;padding: 3px;font-weight: bold;">										Select Plan								
								</span>
							</div>
							<div style="width: 40%;">
								<t t-call="theme_pharmacistplace.three_hr_lines_right_part"/>
							</div>
						</div>
						<t t-if="not saas_portal_plans">
							<div class="alert alert-success text-center o_form_header" attrs="{'invisible': [('free_membership', '=', False)]}">
								<div>
									<strong>No plan defined yet. </strong>
								</div>
							</div>
						</t>
						<!-- All Saas portal plans -->
						<div class="row mb16" style="display: flex;flex-flow: row wrap;justify-content: center;">
							<t t-foreach="saas_portal_plans" t-as="saas_plan">
								<t t-set="product" t-value="saas_plan.get_product_tmpl()"/>
								<t t-call="website_saas_plan.saas_plan_products_item"/>
							</t>
						</div>
					</div>
				</div>
			</t>
		</template>
		<template id="saas_plan_products_item" name="Membership item">
			<t t-set="variants" t-value="product.product_variant_ids.sorted(key=lambda r: r.website_price)"/>
			<div t-if="variants" class="col-md-4 col-xs-12">
				<div class="panel panel-info">
					<div class="panel-heading text-center">
						<h3 style="margin: 0" class="o_default_snippet_text">
							<t t-esc="saas_plan.name"/>
						</h3>
					</div>
					<div class="panel-body text-center text-muted" style="background-color: rgba(0,0,0,0.1)">
						<p t-if="variants and len(variants) &gt; 1" style="margin: 0" class="text-muted o_default_snippet_text">
							Start @
						</p>
						<h3 style="margin: 0">
							<t t-if="website.currency_id.position == 'before'">
								<span>
									<t t-esc="website.currency_id.symbol"/>
								</span>
							</t>
							<b style="font-size: 30px">
								<t t-esc="str(variants[0].website_price).split('.')[0]"/>
							</b>
							<t t-if="len(str(variants[0].website_price).split('.')[1]) == 2">
								<small>.																	
									<t t-esc="str(variants[0].website_price).split('.')[1]"/>
								</small>
							</t>
							<t t-if="not len(str(variants[0].website_price).split('.')[1]) == 2">
								<small>.																	
									<t t-esc="str(variants[0].website_price).split('.')[1] + '0'"/>
								</small>
							</t>
							<t t-if="website.currency_id.position == 'after'">
								<span>
									<t t-esc="website.currency_id.symbol"/>
								</span>
							</t>
						</h3>
					</div>
					<ul class="list-group">
						<t t-foreach="product.attribute_line_ids" t-as="attribute_line">
							<li class="list-group-item o_default_snippet_text">
								<span style="font-weight:bold;">
									<t t-esc="attribute_line.attribute_id.name"/>:								
								</span>
								<t t-foreach="attribute_line.value_ids" t-as="value">
									<span class="text-muted">
										<t t-esc="value.name"/>
										<span t-if="value != attribute_line.value_ids[-1]">,</span>
									</span>
								</t>
							</li>
						</t>
					</ul>
					<div class="panel-footer text-center">
						<p class="text-muted">
							<i class="o_default_snippet_text">Instant setup, satisfied or reimbursed.</i>
						</p>
						<a t-att-href="keep('/shop/product/%s' % slug(product))" class="btn btn-primary btn-lg o_default_snippet_text">Buy now</a>
					</div>
				</div>
			</div>
		</template>
	</data>
</odoo>