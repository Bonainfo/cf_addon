        <field name="name">Unpublish All Products</field>
        <field name="key2">client_action_multi</field>
        <field name="key">action</field>
        <field name="model">product.template</field>
        <field name="value" eval="'ir.actions.server,' + str(ref('unpublish_all_product_template_server_action'))" />
    </record>

