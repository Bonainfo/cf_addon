<odoo>
	<data>

		<template id="pp_portal_my_home_menu_contracts" inherit_id="website_portal_contract.portal_my_home_menu_contracts">
			<xpath expr="//a[@href='/my/contracts']/.." position="replace">
			</xpath>
		</template>

		<template id="pp_contract_theme_pharmacistplace_portal_layout" inherit_id="theme_pharmacistplace.theme_pharmacistplace_portal_layout">
			<xpath expr="//div[@id='smart_pharmacy_menus']" position="attributes">
				<attribute name="class"></attribute>
			</xpath>
			<xpath expr="//div[@id='saas_sidebar_account']//ul[hasclass('o_portal_submenu')]" position="inside">
				<li t-if="request.env['account.analytic.account']._search_contracts()" t-att-class="'active' if contract_active else ''">
					<a href="/my/contracts" class="pp-brand-info">
						<span class="fa fa-paperclip"/>
						<span>Contracts</span>
						<i class="pull-right fa fa-angle-right"/>
					</a>
				</li>
			</xpath>
		</template>

		<template id="pp_portal_my_home_contracts" inherit_id="website_portal_contract.portal_my_home_contracts">
			<xpath expr="//a[@href='/my/contracts']/.." position="attributes">
				<attribute name="t-if">instance_count</attribute>
			</xpath>
		</template>

		<template id="pp_saas_portal_my_contracts" inherit_id="website_portal_contract.portal_my_contracts">
			<xpath expr="//h3[hasclass('page-header')]" position="replace">
				<h1 class="mb32 hidden-md hidden-lg hidden-xl">Your Contracts</h1>
				<div style="display:flex;margin-top: 10px;" class="mb32 hidden-sm hidden-xs">
					<div style="width: 38%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_left_part"/>
					</div>
					<div style="width: 24%;text-align: center;padding: 10px;">
						<span style="font-size: 22px;color: #272866;padding: 3px;font-weight: bold;">
							Your Contracts
						</span>
					</div>
					<div style="width: 38%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_right_part"/>
					</div>
				</div>
			</xpath>
		</template>
    </data>
</odoo>
