<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="payment_payfort_tmpl" inherit_id="website.assets_frontend" name="payment_payfort">
            <xpath expr="." position="inside">

                <script type="text/javascript" src='/payment_payfort/static/src/js/payfort.js'></script>
              <!--<link rel='stylesheet' href='/payment_payfort/static/src/css/payment_payfort.css'/>-->

            </xpath>
        </template>

        <template id="payment_payfort_error" name="Payfort Error">
        	<t t-call="website.layout">
        			<div class="cold-md-12 text-center">
        				<img  src='/payment_payfort/static/src/img/odoo-payment-error-2.jpg' alt="odoo-payment-error"  height='350px' width='100%'/>
        			</div>
              <div class="hero-unit text-center">
                  <t t-raw="error_msg"/>
                  <p>
                    <a class="btn btn-primary btn-large" href='/shop/checkout'>
                     Back to Checkout
                    </a>
                  </p>
              </div>
			</t>
        </template>

    </data>
</odoo>
