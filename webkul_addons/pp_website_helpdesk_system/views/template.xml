<odoo>
	<data>

		<template id="pp_portal_my_home_menu_helpdesk" inherit_id="website_helpdesk_system.portal_my_home_menu_helpdesk">
			<xpath expr="//a[@href='/my/helpdesk']/.." position="replace">
				<li t-att-class="'active' if helpdesk_active else ''">
					<a href="/my/helpdesk" class="pp-brand-info">
						<span class="fa fa-life-ring"/>
						<span>Helpdesk</span>
						<i class="pull-right fa fa-angle-right"/>
					</a>
				</li>
			</xpath>
		</template>

		<template id="pp_website_my_tickets" inherit_id="website_helpdesk_system.my_tickets">
			<xpath expr="//h3[hasclass('page-header')]" position="replace">
				<h1 class="mb32 hidden-md hidden-lg hidden-xl">Helpdesk and Support</h1>
				<div style="display:flex;margin-top: 10px;" class="mb32 hidden-sm hidden-xs">
					<div style="width: 35%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_left_part"/>
					</div>
					<div style="width: 30%;text-align: center;padding: 10px;">
						<span style="font-size: 22px;color: #272866;padding: 3px;font-weight: bold;">
							Helpdesk and Support
						</span>
					</div>
					<div style="width: 35%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_right_part"/>
					</div>
				</div>
				<!-- <attribute name="class">pp-brand-info</attribute> -->
			</xpath>
		</template>

		<template id="pp_website_my_ticket" inherit_id="website_helpdesk_system.my_ticket">
			<t t-call="website.layout" position="attributes">
				<attribute name="t-call">website_portal.portal_layout</attribute>
			</t>
			<xpath expr="//div[@id='wrap']" position="before">
				<h1 class="mb32 hidden-md hidden-lg hidden-xl">Helpdesk and Support</h1>
				<div style="display:flex;margin-top: 10px;" class="mb32 hidden-sm hidden-xs">
					<div style="width: 35%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_left_part"/>
					</div>
					<div style="width: 30%;text-align: center;padding: 10px;">
						<span style="font-size: 22px;color: #272866;padding: 3px;font-weight: bold;">
							Helpdesk and Support
						</span>
					</div>
					<div style="width: 35%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_right_part"/>
					</div>
				</div>
			</xpath>
		</template>

		<template id="pp_website_helpdesk_view" inherit_id="website_helpdesk_system.helpdesk_view">
			<xpath expr="//h2" position="replace">
				<h1 class="mb32 hidden-md hidden-lg hidden-xl">Helpdesk and Support</h1>
				<div style="display:flex;margin-top: 10px;" class="mb32 hidden-sm hidden-xs">
					<div style="width: 35%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_left_part"/>
					</div>
					<div style="width: 30%;text-align: center;padding: 10px;">
						<span style="font-size: 22px;color: #272866;padding: 3px;font-weight: bold;">
							Helpdesk and Support
						</span>
					</div>
					<div style="width: 35%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_right_part"/>
					</div>
				</div>
			</xpath>
			<t t-call="website.layout" position="attributes">
				<attribute name="t-call">website_portal.portal_layout</attribute>
			</t>
		</template>

		<template id="pp_website_ticket_created" inherit_id="website_helpdesk_system.ticket_created">
			<t t-call="website.layout" position="attributes">
				<attribute name="t-call">website_portal.portal_layout</attribute>
			</t>
			<xpath expr="//div[hasclass('jumbotron')]" position="before">
				<h1 class="mb32 hidden-md hidden-lg hidden-xl">Helpdesk and Support</h1>
				<div style="display:flex;margin-top: 10px;" class="mb32 hidden-sm hidden-xs">
					<div style="width: 35%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_left_part"/>
					</div>
					<div style="width: 30%;text-align: center;padding: 10px;">
						<span style="font-size: 22px;color: #272866;padding: 3px;font-weight: bold;">
							Helpdesk and Support
						</span>
					</div>
					<div style="width: 35%;">
						<t t-call="theme_pharmacistplace.three_hr_lines_right_part"/>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<a href="/my/helpdesk" name="all_ticket" style="color: #ffffff;background: #50588a;" class="btn btn-default pull-right">
							<h3 class="panel-title">
								<i class="fa fa-users"></i>
								<b>All Tickets</b>
							</h3>
						</a>
					</div> 
				</div>
			</xpath>
		</template>

    </data>
</odoo>
