<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_config_settings_view_form" model="ir.ui.view">
        <field name="name">helpdesk.config.settings</field>
        <field name="model">helpdesk.config.settings</field>
        <field name="arch" type="xml">
            <form string="Helpdesk settings">
                <header>
                    <button string="Apply" type="object" name="execute" class="oe_highlight"/>                        or
                    <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                </header>
                <group >
                    <group name="recaptch_setting" string="reCAPTCHA Setting">
                        <field name="enabled_recaptcha" class="oe_inline" help="Enable this if you want to add reCAPTCHA in form."/>
                        <field name="recaptcha_private_key" password="True" class="oe_inline" 
                            attrs="{ 'required':[('enabled_recaptcha','=',True)] }"
                                />
                        <field name="recaptcha_site_key" password="True" class="oe_inline" attrs="{ 'required':[('enabled_recaptcha','=',True)] }"/>
                    </group>
                    <group name="review_setting" string="Review Settings">
                        <field name="review_template_id" required="1"/>
                        <!-- <field name="review_auto_publish" /> -->
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_config_settings" model="ir.actions.act_window">
        <field name="name">Configure Helpdesk</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="menu_helpdesk_general_settings" name="Settings" parent="menu_helpdesk_config"
        sequence="0" action="action_config_settings" groups="base.group_system,website_helpdesk_system.group_helpdesk_manager"/>
</odoo>
