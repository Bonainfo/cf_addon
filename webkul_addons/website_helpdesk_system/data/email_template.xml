<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Survey send invitation by email: template -->
        <record id="email_template_review" model="mail.template">
            <field name="name">Helpdesk Review - Send by Email</field>
            <field name="subject">Share your Experience</field>
            <field name="email_from">no-reply@webkul.com</field>
            <field name="email_to">${object.email}</field>
            <field name="model_id" ref="model_helpdesk_review" />
            <field name="auto_delete" eval="True" />
            <field name="body_html">
                <![CDATA[
                        <p>Hello,</p>
                        <p>We would really appreciate if you can add review to servies, so that others can benefit from your experience. Your opinion matters to us and would be really grateful if you take a few moments to review your experience.</p>
                        <p><a style="margin-left: 85px; padding:5px 10px; border-radius: 3px; background-color:#875A7B; text-align:center; text-decoration:none; color:#F7FBFD;" href="${object.public_url}/${object.token}">Please, click here for Review</a></p>
                        <p>Thanks for your trust</p>,

                ]]>
            </field>
        </record>

        <record id="email_template_ticket_create_admin" model="mail.template">
            <field name="name">Ticket - Send by Email</field>
            <field name="subject">A Ticket has been generated.</field>
            <field name="email_from">${object.email or ''}</field>
            <field name="email_to">${object.company_id.email or ''}</field>
            <field name="model_id" ref="model_helpdesk_ticket" />
            <field name="auto_delete" eval="True" />
            <field name="body_html">
                <![CDATA[
                        <p>Hello,</p>
                        <p>A ticket with reference ${object.name} has been generated by ${object.partner_id.name}.</p>

                ]]>
            </field>
        </record>

        <record id="email_template_ticket_create_customer" model="mail.template">
            <field name="name">Ticket - Send by Email</field>
            <field name="subject">Ticket Ref:- ${object.name} has been generated.</field>
            <field name="email_from">no-reply@webkul.com</field>
            <field name="email_to">${object.email}</field>
            <field name="model_id" ref="model_helpdesk_ticket" />
            <field name="auto_delete" eval="True" />
            <field name="body_html">
                <![CDATA[
                        <p>Hello ${object.partner_id.name},
                            % set access_action = object.with_context(force_website=True).get_access_action()
                            % set is_online = access_action and access_action['type'] == 'ir.actions.act_url'
                            % set access_url = is_online and object.get_mail_url() or ''
                        </p>
                        <p>A ticket with reference ${object.name} has been generated.</p>
                        % if is_online
                         <center>
        <a href="${access_url}" style="background-color: #1abc9c; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;" class="o_default_snippet_text">View Ticket</a>
        <br><br><br>
        <span style="color:#888888">(or view attached PDF)</span>
    </center>
%endif
                ]]>
            </field>
        </record>
    </data>
</odoo>