<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stage_reason_wizard_form" model="ir.ui.view">
            <field name="name">Reason Message wizard</field>
            <field name="model">stage.update.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Message" >
                    <field name="is_cancel" invisible="1"/>
                    <group colsapn="4">
                        <field name="stage_id"/>
                    </group>
                    <separator string="Reason" colspan="6"/>
                    <field name="reason" colspan="4" nolabel="1" placeholder="Please mention your reason why you do this."/>
                    <newline/>
                    <separator colspan="6"/>
                    <footer>
                        <button name="get_resolved_reason" string="Cancel Now" type="object"
                             class="oe_highlight" attrs="{'invisible':[('is_cancel','!=',True)]}"/>
                        <button name="get_resolved_reason" string="Resolve Now" type="object"
                             class="oe_highlight" attrs="{'invisible':[('is_cancel','=',True)]}"/>
                        <button special="cancel" class="" string="Close" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="stage_reason_wizard_action" model="ir.actions.act_window">
            <field name="name">Reason</field>
            <field name="res_model">stage.update.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stage_reason_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
            