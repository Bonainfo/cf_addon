<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pp_mp_website_description_in_template_form_view" model="ir.ui.view">
        <field name="name">pp.product.template.product.website.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="odoo_marketplace.wk_seller_product_template_form_view"/>
        <field name="arch" type="xml">
            <page name="notes" position="inside">
                <separator string="Description for Website" colspan="4"/>
                <field name="website_description" colspan="4" nolabel="1" placeholder="This note will be displayed on the quotations."/>
            </page>
        </field>
    </record>

    <record id="pp_website_description_in_variant_form_view" model="ir.ui.view">
        <field name="name">pp.product.product.product.website.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="odoo_marketplace.mp_product_product_form_view"/>
        <field name="arch" type="xml">
            <page name="notes" position="inside">
                <separator string="Description for Website" colspan="4"/>
                <field name="website_description" colspan="4" nolabel="1" placeholder="This note will be displayed on the quotations."/>
            </page>
        </field>
    </record>

</odoo>
