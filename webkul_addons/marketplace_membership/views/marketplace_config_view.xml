<odoo>
    <data>
        <record id="add_mp_membership_field_in_mp_settings" model="ir.ui.view">
            <field name="name">mp.config.settings.adaptive.paypal</field>
            <field name="model">marketplace.config.settings</field>
            <field name="inherit_id" ref="odoo_marketplace.marketplace_base_config_settings_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='config_product_terms']" position="inside">
                    <group name="mp_membership_group" string="Marketplace Membership">
                        <group>
                            <label for="mp_membership_product" string="Product Limit For Free Membership"/>
                            <div>
                                <label for="mp_membership_product"/>
                                <field name="mp_membership_product" required="1" class="oe_inline" help="If seller is free member than this value of product seller will allowed to create."/>
                            </div>
                        </group>
                        <group name="mp_membership_help" class="oe_grey" col="1">
                            <h6 class="oe_inline">
                                ⇒ Product defined here will be applicable to free membership seller. You can also set it seller wise from seller profile.
                            </h6>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="add_mp_membership_field_in_auto_mp_settings" model="ir.ui.view">
            <field name="name">mp.config.settings.adaptive.paypal</field>
            <field name="model">marketplace.config.settings</field>
            <field name="inherit_id" ref="odoo_marketplace.marketplace_auto_base_config_settings_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='config_product_terms']" position="inside">
                    <group name="mp_membership_group" string="Marketplace Membership">
                        <group>
                            <label for="mp_membership_product" string="Product Limit For Free Membership"/>
                            <div>
                                <label for="mp_membership_product"/>
                                <field name="mp_membership_product" required="1" class="oe_inline" help="If seller is free member than this value of product seller will allowed to create."/>
                            </div>
                        </group>
                        <group name="mp_membership_help" class="oe_grey" col="1">
                            <h6 class="oe_inline">
                                ⇒ Product defined here will be applicable to free membership seller. You can also set it seller wise from seller profile.
                            </h6>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="add_mp_membership_link_in_translate_marketplace_config" model="ir.ui.view">
            <field name="name">Translate.Marketplace.Membership.Config.Settings</field>
            <field name="model">translate.marketplace.config.settings</field>
            <field name="inherit_id" ref="odoo_marketplace.translate_marketplace_config_settings_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='message_to_publish']/.." position="after">
                    <group name="mp_membership_group" string="Marketplace Membership">
                        <field name="mp_membership_plan_link_label" help="Label for seller membership plan page."/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
