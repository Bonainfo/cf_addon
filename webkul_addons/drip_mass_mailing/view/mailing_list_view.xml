        <record model="ir.ui.view" id="view_drip_history_search">
            <field name="name">drip.mailing.history.search</field>
            <field name="model">drip.mailing.history</field>
            <field name="arch" type="xml">
               <search string="Contacts">
                    <field name="contact_id" />
                    <field name="drip_template_id"/>
                    <field name="mailing_list_id"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Drip Template" name="group_drip_template_id"
                            context="{'group_by': 'drip_template_id'}"/>
                        <filter string="Contact" name="group_contact_id" 
                            context="{'group_by': 'contact_id'}"/>
                        <filter string="Mailing List" name="group_mailing_list_id"
                            context="{'group_by': 'mailing_list_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="drip_history_action">
            <field name="name">Drip History</field>
            <field name="res_model">drip.mailing.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('mailing_list_id', 'in', [active_id])]</field>
            <field name="context">{'search_default_group_contact_id':1,'default_mailing_list_id': active_id}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a recipient.
              </p>
            </field>
        </record>

        
        <record model="ir.ui.view" id="view_mail_mass_mailing_list_form">
            <field name="name">mail.mass_mailing.list.form</field>
            <field name="model">mail.mass_mailing.list</field>
            <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_list_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="%(drip_mass_mailing.drip_history_action)d"
                            type="action" icon="fa-history" class="oe_stat_button" string="Drip History" >
                    </button>
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="after">
                    <group name="drip_mailing" string="Drip Mailing Configuration">
                        <field name="enable_drip_mailing" class="oe_inline" />
                        <label for="enable_drip_mailing" string="Enable Drip Mass Mailing feature" style="font-weight:bold;"/>
                        <group name="wk_group1">
                        <field name="start_date" 
                            attrs="{'invisible':[('enable_drip_mailing','=',False)],'required':[('enable_drip_mailing','=',True)] }"/>
                            <field name="end_date" attrs="{'invisible':[('enable_drip_mailing','=',False)]}"/>
                        </group>
                        <group name="wk_group2">
                            <field name="outgoing_mail_server" attrs="{'invisible':[('enable_drip_mailing','=',False)]}"/>
                        </group>
                    </group>
                    <div attrs="{'invisible':[('enable_drip_mailing','=',False)]}">
                        <label for="drip_mailing_template_ids"></label>
                        <field name="drip_mailing_template_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="after_days"/>
                                <field name="template_id" 
                                context="{'default_model': 'mail.mass_mailing.contact' }"
                                />
                            </tree>
                        </field>
                    </div>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="view_drip_mass_mailing_template_search">
            <field name="name">drip.mass_mailing.template.search</field>
            <field name="model">drip.mass_mailing.template</field>
            <field name="arch" type="xml">
               <search string="Contacts">
                    <field name="name" />
                    <field name="template_id"/>
                    <field name="mailing_list_id"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Creation Date" name="group_create_date"
                            context="{'group_by': 'create_date'}"/>
                        <filter string="Template" name="group_template_id" 
                            context="{'group_by': 'template_id'}"/>
                        <filter string="Mailing List" name="group_mailing_list_id"
                            context="{'group_by': 'mailing_list_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_drip_mass_mailing_template_tree">
            <field name="name">drip.mass_mailing.template.tree</field>
            <field name="model">drip.mass_mailing.template</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="name"/>
                    <field name="after_days"/>
                    <field name="template_id"/>
                    <field name="mailing_list_id"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_drip_mass_mailing_template_form">
            <field name="name">drip.mass_mailing.template.form</field>
            <field name="model">drip.mass_mailing.template</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Mailing Template">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. John Smith"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <label for="after_days" string="Mail sent after"/>
                                <div class="o_row">
                                    <field name="after_days"/>
                                    <span> days</span>
                                </div>
                                <field name="template_id"/>
                                <field name="mailing_list_id"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                            </group>
                        </group>
                        <field name="drip_mailing_history_ids"/>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="view_drip_mailing_history_tree">
            <field name="name">drip.mailing.history.tree</field>
            <field name="model">drip.mailing.history</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="contact_id"/>
                    <field name="mailing_list_id"/>
                    <field name="drip_template_id"/>
                    <field name="sent_date"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_drip_mailing_history_form">
            <field name="name">drip.mailing.history.form</field>
            <field name="model">drip.mailing.history</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Mailing Template">
                    <sheet>
                        <div class="oe_title">
                        </div>
                        <group>
                            <group>
                                <field name="contact_id"/>
                                <field name="mailing_list_id"/>
                                <field name="drip_template_id"/>
                                <field name="sent_date"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_drip_template">
            <field name="name">Drip Templates</field>
            <field name="res_model">mail.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="mail.email_template_tree" />
            <field name="domain">[('model', '=', 'mail.mass_mailing.contact')]</field>
            <field name="context">{'default_model': 'mail.mass_mailing.contact'}</field>
        </record>


        <menuitem name="Drip Templates" id="menu_view_drip_template"
            parent="mass_mailing.menu_mass_mailing_configuration" sequence="1"
            groups="base.group_no_one,mass_mailing.group_mass_mailing_user"
            action="action_view_drip_template"/>


    </data>
</odoo>
