            <field name="name">Drip History</field>
            <field name="res_model">drip.mailing.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('contact_id', 'in', [active_id])]</field>
            <field name="context">{'search_default_group_mailing_list_id': 1,'default_contact_id': active_id}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a recipient.
              </p>
            </field>
        </record>

