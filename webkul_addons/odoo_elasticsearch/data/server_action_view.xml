

<odoo>
    <data noupdate="0">

        <record model="ir.actions.server" id="open_update_record_server_action">
            <field name="name">Update Record</field>
            <field name="model_id" ref="model_elastic_record_mapping"/>
            <field name="code">
                              action=model.need_sync_action()
            </field>
        </record>

        <record id="test_more_item" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'elastic.record.mapping'" name="model"/>
            <field name="name">Test Item</field>
            <field eval="'ir.actions.server,%d'%open_update_record_server_action" name="value"/>
        </record>

        <record model="ir.cron" id="odoo_elastic_index_scheduler_call">
            <field name="name">Automated Index update Scheduler</field>
            <field name="active" eval="True"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'elastic.search.config'"/>
            <field name="function" eval="'process_index_update_scheduler_queue'"/>
            <field name="args" eval="'()'"/>
        </record>

    </data>
</odoo>