<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <template id="web_rtl_codefish.layout" inherit_id="web.layout" name="RTL Layout">
            <xpath expr="//html/head/t" position="after">
                <link t-if="lang_direction == 'rtl'" href="/web_rtl_codefish/static/src/css/bootstrap-rtl.min.css"
                      rel="stylesheet"/>
                
            </xpath>
            <xpath expr="//html" position="before">
                <t t-set="body_classname" t-value="lang_direction + ' ' + (body_classname or '')"/>
            </xpath>
        </template>


    </data>
</openerp>
